@model FinansBank.Models.Entity.Customer
@{
    ViewBag.Title = "CustomerImport";
    Layout = "~/Views/Shared/_MainLayout.cshtml";
}

@using (Html.BeginForm("UPDATE", "Customer", FormMethod.Post))
{
    <div class="form-group">


        @Html.LabelFor(m => m.CustomerID)
        @Html.TextBoxFor(m => m.CustomerID, new { @class = "form-control", @readonly = "readonly" })



        @Html.LabelFor(m => m.CustomerName)
        @Html.TextBoxFor(m => m.CustomerName, new { @class = "form-control" })



        @Html.LabelFor(m => m.CustomerSurname)
        @Html.TextBoxFor(m => m.CustomerSurname, new { @class = "form-control" })


        @Html.LabelFor(m => m.E_mail)
        @Html.TextBoxFor(m => m.E_mail, new { @class = "form-control" })


        @Html.LabelFor(m => m.Telephone)
        @Html.TextBoxFor(m => m.Telephone, new { @class = "form-control" })


        @Html.LabelFor(m => m.Adress)
        @Html.TextBoxFor(m => m.Adress, new { @class = "form-control" })
    </div>

    <div>
        <button class="btn btn-warning"> Müşteri Güncelle</button>
    </div>
}

